<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Open Cart Test Regression PW Suite" verbose="4"
       >
    <listeners>
        <listener class-name="com.qa.util.TestListener" />
    </listeners>
    <test name="Open Cart Home Page Test_chrome">

        <classes>
            <class name="com.qa.opencart.tests.HomePageTest" />
        </classes>
    </test>

    <test name="Open Cart Login Page Test_safari">
        <parameter name="browser" value="chromium" />
        <classes>
            <class name="com.qa.opencart.tests.LoginPageTest" />
        </classes>
    </test>
</suite>